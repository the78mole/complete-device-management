# Environment variables for cloud-infrastructure docker-compose
# Copy this file to .env and fill in real secrets before running.

# Keycloak
KC_DB_PASSWORD=changeme
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=changeme

# ThingsBoard
TB_DB_PASSWORD=changeme
TB_OIDC_SECRET=changeme
TB_SYSADMIN_EMAIL=sysadmin@thingsboard.org
TB_SYSADMIN_PASSWORD=sysadmin

# hawkBit
HB_DB_PASSWORD=changeme
HB_DB_ROOT_PASSWORD=changeme_root
HB_ADMIN_USER=admin
HB_ADMIN_PASSWORD=admin

# InfluxDB
INFLUX_ADMIN_USER=admin
INFLUX_ADMIN_PASSWORD=changeme00
INFLUX_TOKEN=my-super-secret-influx-token

# Grafana
GRAFANA_OIDC_SECRET=changeme

# WireGuard
WG_SERVER_URL=auto
WG_PORT=51820
WG_PEERS=10

# IoT Bridge API (glue service)
BRIDGE_OIDC_SECRET=changeme

# Step CA (PKI)
# Retrieve fingerprint after first boot:
#   docker exec cdm-step-ca step certificate fingerprint /home/step/certs/root_ca.crt
# The iot-bridge-api will fail to start if this value is empty.
STEP_CA_FINGERPRINT=RETRIEVE_AFTER_FIRST_BOOT
STEP_CA_PROVISIONER_NAME=iot-bridge
STEP_CA_PROVISIONER_PASSWORD=changeme
